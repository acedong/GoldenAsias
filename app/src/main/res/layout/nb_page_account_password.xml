<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/nb_old_accountpass_label"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:gravity="right"
            android:text="旧登录密码"
            android:textColor="@color/golden" />

        <EditText
            android:id="@+id/nb_old_accountpass_edit_text"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:background="@drawable/nb_fillet_white_backdrop_button"
            android:hint="请输入当前登录密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColorHint="@color/gainsboro"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/nb_new_account_pass_label"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:gravity="right"
            android:text="新登录密码"
            android:textColor="@color/golden" />

        <EditText
            android:id="@+id/nb_new_account_pass_edit_text"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:background="@drawable/nb_fillet_white_backdrop_button"
            android:hint="请输入新登录密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColorHint="@color/gainsboro"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/nb_confirm_account_pass_label"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:gravity="right"
            android:text="确认新密码"
            android:textColor="@color/golden" />

        <EditText
            android:id="@+id/nb_confirm_account_pass_edit_text"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:background="@drawable/nb_fillet_white_backdrop_button"
            android:hint="请确认登录密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColorHint="@color/gainsboro"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/nb_confirm_accountpass_button"
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:background="@drawable/nb_fillet_gray_backdrop_button"
        android:text="确定"
        android:enabled="false"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:textSize="12sp"/>

</LinearLayout>