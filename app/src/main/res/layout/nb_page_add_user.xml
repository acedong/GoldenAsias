<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ascv="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:id="@+id/nb_add_user_keyboard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="60.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="10.0dip" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="4.0dip"
                    android:text="基本信息设置"
                    android:textColor="#ff888888"
                    android:textSize="14.0sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TableRow
                            android:layout_width="fill_parent"
                            android:background="@drawable/settings_itemtop_press"
                            android:paddingBottom="10.0dip"
                            android:paddingTop="10.0dip" >

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="用户级别"
                                android:textColor="@color/goldenrod"
                                android:textSize="14.0sp" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dip"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:id="@+id/ascv_sample_holder"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical" >
                                </LinearLayout>
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:background="@drawable/settings_itemmiddle_press"
                            android:paddingBottom="10.0dip"
                            android:paddingLeft="6dip"
                            android:paddingRight="6dip"
                            android:paddingTop="10.0dip" >

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:text="登录帐号"
                                android:textColor="@color/goldenrod"
                                android:textSize="14.0sp" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dip"
                                android:layout_weight="1"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dip"
                                    android:text="(由0-9,a-z,A-Z组成的6-16个字符),注意：昵称与用户名相同"
                                    android:textColor="@color/gray"
                                    android:textSize="10sp" />

                                <EditText
                                    android:id="@+id/nb_adduser_username"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dip"
                                    android:background="@drawable/nb_rounded_edittext"
                                    android:hint="请输入用户名"
                                    android:inputType="textShortMessage"
                                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLIMNOPQRSTUVWXYZ"
                                    android:singleLine="true"
                                    android:textColor="@color/gray"
                                    android:textColorHint="@color/gray"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:background="@drawable/settings_itembottom_press"
                            android:paddingBottom="10.0dip"
                            android:paddingTop="10.0dip" >

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:text="登录密码"
                                android:textColor="@color/goldenrod"
                                android:textSize="14.0sp" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dip"
                                android:layout_weight="1"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="(由字母和数字组成6-16个字符；且必须包含数字和字母，不允许连续三位相同)"
                                    android:textColor="@color/gray"
                                    android:textSize="10sp" />

                                <EditText
                                    android:id="@+id/nb_adduser_password"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dip"
                                    android:background="@drawable/nb_rounded_edittext"
                                    android:hint="请输入密码"
                                    android:inputType="textPassword"
                                    android:password="true"
                                    android:singleLine="true"
                                    android:textColor="@color/gray"
                                    android:textColorHint="@color/gray"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="4.0dip"
                    android:text="返点设置"
                    android:textColor="#ff888888"
                    android:textSize="14.0sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:shrinkColumns="1"
                        android:stretchColumns="2" >

                        <TableRow
                            android:layout_width="fill_parent"
                            android:background="@drawable/settings_itemtop_press"
                            android:paddingBottom="10.0dip"
                            android:paddingTop="10.0dip" >

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="剩余开户额"
                                android:textColor="@color/goldenrod"
                                android:textSize="14.0sp" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dip"
                                android:layout_weight="1"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="备注：开通返点 [6.5] 以下的用户不需要开户配额"
                                    android:textColor="@color/gray"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/nb_adduser_norm_label"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="(6.1-6.5):0个 (6.6-7.0):0个 (7.1-7.4):0个 (7.5-7.5):0个"
                                    android:textColor="@color/gray"
                                    android:textSize="10sp" />
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:background="@drawable/settings_itemmiddle_press"
                            android:paddingBottom="10.0dip"
                            android:paddingTop="10.0dip" >

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="您的返点级别"
                                android:textColor="@color/goldenrod"
                                android:textSize="14.0sp" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/nb_adduser_maxpoint"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="0.0"
                                    android:textColor="@color/gray" />
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:background="@drawable/settings_itembottom_press"
                            android:paddingBottom="10.0dip"
                            android:paddingTop="10.0dip" >

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="fill_parent"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:paddingBottom="10dip"
                                    android:text="保留返点"
                                    android:textColor="@color/goldenrod"
                                    android:textSize="14.0sp" />

                                <TextView
                                    android:id="@+id/nb_seekbar_title_def"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:paddingTop="5dip"
                                    android:text="0.0"
                                    android:textColor="@color/goldenrod"
                                    android:textSize="14.0sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dip"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="10dip"
                                    android:text="(例如：自身返点为0.8，保留返点选择0.5，则新开帐户的返点为0.3)"
                                    android:textColor="@color/gray"
                                    android:textSize="10sp" />

                                <SeekBar
                                    android:id="@+id/timeline"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="true"
                                    android:max="75"
                                    android:maxHeight="4.0dip"
                                    android:minHeight="4.0dip"
                                    android:paddingLeft="16.0dip"
                                    android:paddingRight="16.0dip"
                                    android:progressDrawable="@drawable/seekbar_po_seekbar"
                                    android:thumb="@drawable/seekbar_thumb" />
                            </LinearLayout>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal" >

                    <Button
                        android:id="@+id/nb_pageuser_addaccount_but"
                        android:layout_width="fill_parent"
                        android:layout_height="35dip"
                        android:background="@drawable/nb_fillet_red_backdrop_button"
                        android:text="执行开户"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>