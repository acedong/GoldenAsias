<?xml version="1.0" encoding="utf-8"?>
<!-- 资金密码 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/nb_setting_fundspass_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="20dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nb_setting_fundspass_label"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/golden"
                android:layout_marginRight="10dip"
                android:text="设置资金密码" />

            <EditText
                android:id="@+id/nb_setting_fundspass_edit_text"
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:background="@drawable/nb_fillet_white_backdrop_button"
                android:hint="请输入资金密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="@color/gainsboro"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nb_modify_fundspass_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="20dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nb_old_fundspass_label"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="10dip"
                android:textColor="@color/golden"
                android:text="旧资金密码" />

            <EditText
                android:id="@+id/nb_old_fundspass_edit_text"
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:background="@drawable/nb_fillet_white_backdrop_button"
                android:hint="请输入当前资金密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="@color/gainsboro"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nb_new_funds_pass_label"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/golden"
                android:layout_marginRight="10dip"
                android:text="新资金密码" />

            <EditText
                android:id="@+id/nb_new_funds_pass_edit_text"
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:background="@drawable/nb_fillet_white_backdrop_button"
                android:hint="请输入新资金密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="@color/gainsboro"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="20dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nb_confirm_funds_pass_label"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="10dip"
                android:textColor="@color/golden"
                android:text="确认新密码" />

            <EditText
                android:id="@+id/nb_confirm_funds_pass_edit_text"
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:background="@drawable/nb_fillet_white_backdrop_button"
                android:hint="请确认输入资金密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="@color/gainsboro"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/nb_confirm_fundspass_button"
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:background="@drawable/nb_fillet_gray_backdrop_button"
        android:text="确定"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:enabled="false"
        android:textSize="12sp"/>

</LinearLayout>