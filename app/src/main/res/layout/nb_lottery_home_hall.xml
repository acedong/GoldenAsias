<?xml version="1.0" encoding="utf-8"?>
<!-- 购彩大厅 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
	<include android:id="@+id/nb_lottery_home_refresh" layout="@layout/nb_page_refresh" android:visibility="gone"/>
    
    <com.goldenasia.lottery.view.controls.PullToRefreshLayout
        android:id="@+id/refresh_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <include layout="@layout/refresh_head" />
        <!-- 支持所有实现Pullable接口的View -->

        <com.goldenasia.lottery.view.controls.PullableListView
            android:id="@+id/nb_homwespecies_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@color/black_slight"
            android:dividerHeight="1dip" />

        <include layout="@layout/load_more" />
    </com.goldenasia.lottery.view.controls.PullToRefreshLayout>

</LinearLayout>